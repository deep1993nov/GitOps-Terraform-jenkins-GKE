pipeline {
    agent any

    environment {
        GOOGLE_APPLICATION_CREDENTIALS  = credentials('Dev-Cred')
    }

    stages {
        stage ('TF  INIT') {
            steps {
                dir('Terraform-manifests/') {
                    sh """
            cd $GIT_BRANCH
            terraform workspace new $GIT_BRANCH
            terraform workspace select $GIT_BRANCH
            terraform init -input=false -no-color
        """
                }
            }
        }

        stage ('TF  PLAN') {
            steps {
                    dir('Terraform-manifests/') {
                    sh """
            cd $GIT_BRANCH
            terraform workspace select $GIT_BRANCH
            terraform plan -input=true  -out=terraform.tfplan  -no-color
        """
                    }
            }
        }

        stage ('TF  APPLY') {
            steps {
                script {
                    apply = false
                    try {
                        input message: 'Can you please confirm the apply', ok: 'Ready to Apply the Config'
                        apply = true
                    } catch (err) {
                        apply = false
                        currentBuild.result = 'UNSTABLE'
                    }
                    if (apply) {
                        dir('Terraform-manifests/') {
                            sh """
            cd $GIT_BRANCH
            terraform workspace select $GIT_BRANCH
            terraform apply -auto-approve -no-color
        """
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
