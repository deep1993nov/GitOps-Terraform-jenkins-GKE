pipeline {
    agent any

    environment {
        GOOGLE_APPLICATION_CREDENTIALS  = credentials('Dev-Cred')
    }

    stages {
        stage ('TF  INIT') {
            steps {
                dir('Terraform-manifests/') {
                    sh """
            cd $GIT_BRANCH
            terraform init -input=false -no-color -migrate-state -backend-config=$GIT_BRANCH\.tfstae
        """
                }
            }
        }

        stage ('TF  PLAN') {
            steps {
                    dir('Terraform-manifests/') {
                    sh """
            cd $GIT_BRANCH
            terraform plan -input=true  -out=terraform.tfplan  -no-color
        """
                    }
            }
        }


        stage ('TF  APPLY') {
            when {
                expression {
                    input message: 'Apply the PLAN?'
                    // if input is Aborted, the whole build will fail, otherwise
                    // we must return true to continue
                    return true
                }
                beforeAgent true
            }
            steps {
                script {
                        dir('Terraform-manifests/') {
                            sh """
            cd $GIT_BRANCH
            terraform apply --auto-approve -no-color
        """
                        }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
