pipeline {
    agent none

    environment {
        GOOGLE_APPLICATION_CREDENTIALS  = credentials('Dev-Cred')
    }

    stages {
        stage ('TF  INIT') {
            agent any
            steps {
                dir('Terraform-manifests/') {
                    sh """
            cd $GIT_BRANCH
            terraform init -input=false -no-color -migrate-state
            terraform workspace select $GIT_BRANCH
        """
                }
            }
        }

        stage ('TF  PLAN') {
            agent any
            steps {
                    dir('Terraform-manifests/') {
                    sh """
            cd $GIT_BRANCH
            terraform workspace select $GIT_BRANCH
            terraform plan -input=true  -out=terraform.tfplan  -no-color
        """
                    }
            }
        }

        stage ('USER_CHOICE') {
            steps {
                input message: 'Do you want to apply the terraform plan', ok: 'Apply the plan'
            }
        }

        stage ('TF  APPLY') {
            agent any
            steps {
                script {
                        dir('Terraform-manifests/') {
                            sh """
            cd $GIT_BRANCH
            terraform workspace select $GIT_BRANCH
            terraform apply --auto-approve -no-color
        """
                        }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
